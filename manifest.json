{
  "name": "Dark Reader Whitify",
  "version": "1.0",
  "manifest_version": 2,
  "description": "When using dark theme, get font color white.",
  "homepage_url": "https://yangeok.github.io",
  "background": {
    "scripts": ["script.js"],
    "persistent": true
  },
  "icons": {
    "19": "/icons/19x19.png",
    "38": "/icons/38x38.png",
    "48": "/icons/48x48.png",
    "128": "/icons/128x128.png"
  },
  "browser_action": {
    "default_icons": {
      "19": "/icons/19x19.png",
      "38": "/icons/38x38.png",
      "48": "/icons/48x48.png",
      "128": "/icons/128x128.png"
    },
    "default_popup": "whitify.html"
  },
  "permissions": ["<all_urls>", "tabs"]
}
